<section class="page-header">
  <h1 class="page-title container">
    CDRs
  </h1>
</section>
<main class="page-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="CGRateS ID"
                  @key="cgrid"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-cgrid={{true}}
                />
                <SortHeader
                  @label="Run ID"
                  @key="runId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Origin Host"
                  @key="originHost"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Source"
                  @key="source"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Origin ID"
                  @key="originId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Type of record"
                  @key="tor"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Direction"
                  @key="direction"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Category"
                  @key="category"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Account"
                  @key="account"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Destination"
                  @key="destination"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Cost"
                  @key="cost"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Updated at"
                  @key="updatedAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Deleted at"
                  @key="deletedAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
              </tr>
            </thead>
            <tbody>
              {{#each model as |cdr|}}
                <tr>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.cgrid}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.runId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.originHost}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.source}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.originId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.tor}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.direction}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.category}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.account}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.destination}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{cdr.cost}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{moment-format cdr.createdAt}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{moment-format cdr.updatedAt}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo @route="cdrs.cdr" @model={{cdr}}>
                      {{#if cdr.deletedAt}}
                        {{moment-format cdr.deletedAt}}
                      {{/if}}
                    </LinkTo>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{pagination}}
          @action="toPage"
          @showFL={{true}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock @search={{action "search"}} as |filtersBlock|>
          <FilterText
            @label="CGRateS ID"
            @key="cgrid"
            @value={{this.cgrid}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-cgrid={{true}}
          />
          <FilterText
            @label="Run ID"
            @key="runId"
            @value={{this.runId}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-runid={{true}}
          />
          <FilterText
            @label="Origin Host"
            @key="originHost"
            @value={{this.originHost}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-origin-host={{true}}
          />
          <FilterText
            @label="Source"
            @key="source"
            @value={{this.source}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-source={{true}}
          />
          <FilterText
            @label="Origin ID"
            @key="originId"
            @value={{this.originId}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-origin-id={{true}}
          />
          <FilterSelect
            @label="Type of record"
            @key="tor"
            @value={{this.tor}}
            @onValueChange={{filtersBlock.pushValue}}
            @content={{selectValues.typeOfRecord}}
            @data-test-filter-tor={{true}}
          />
          <FilterText
            @label="Tenant"
            @key="tenant"
            @value={{this.tenant}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-tenant={{true}}
          />
          <FilterText
            @label="Category"
            @key="category"
            @value={{this.category}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-category={{true}}
          />
          <FilterText
            @label="Account"
            @key="account"
            @value={{this.account}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-account={{true}}
          />
          <FilterText
            @label="Destination"
            @key="destination"
            @value={{this.destination}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-destination={{true}}
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>