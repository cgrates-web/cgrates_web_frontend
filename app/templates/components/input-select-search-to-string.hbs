{{#form.element
  controlType=controlType
  property=property
  label=label
  searchEnabled=true
  placeholder=placeholder
  showValidationOn="change"
  class=class
  change=null
  showOwnValidation=showOwnValidation
  data-test-select-search-to-str=dataTest
as |el|}}
  {{#el.control
    allowClear=allowClear
    tagName="div"
    class=(bs-element-validation el.validation)
    search=(perform searchTask)
    value=valueWrapper
    onChange=(action "onChange")
  as |item|}}
    {{item}}
  {{/el.control}}
{{/form.element}}