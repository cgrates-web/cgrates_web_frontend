power-select [
  triggerId=id
  triggerClass=(if errors 'invalid')
  placeholder='Select item...'
  options=anyIfAllowed
  search=(perform searchTask)
  selected=value
  onchange=(action (mut value))
] as |item|
  item
label.active for=id
  = label
small.red-text.error-message
  if errors
    errors.firstObject
