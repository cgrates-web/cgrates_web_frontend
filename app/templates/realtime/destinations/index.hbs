<main class="page-content">
  <div class="container xl">
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <td>
                  ID
                </td>
                <td>
                  Prefixes
                </td>
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each sortedDestinations as |destination|}}
                <tr>
                  <td>
                    {{destination.id}}
                  </td>
                  <td>
                    {{destination.prefixesString}}
                  </td>
                  <td class="actions">
                    <a role="button" {{action "remove" destination}}>
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-destination-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
    </div>
  </div>
</main>