<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <ul class="actions">
        <li>
          <LinkTo @route="realtime.accounts.new">
            <i
              class="material-icons circle btn btn-success"
              data-test-account-add
            >
              add
            </i>
          </LinkTo>
        </li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <td>
                  ID
                </td>
                <td>
                  Balance
                </td>
                <td>
                  Allow negative
                </td>
                <td>
                  Disabled
                </td>
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each sortedAccounts as |account|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="realtime.accounts.account"
                      @model={{account}}
                    >
                      {{account.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="realtime.accounts.account"
                      @model={{account}}
                    >
                      {{account.balance}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="realtime.accounts.account"
                      @model={{account}}
                    >
                      {{#if account.allowNegative}}
                        <i class="material-icons text-success">
                          check
                        </i>
                      {{else}}
                        <i class="material-icons text-danger">
                          clear
                        </i>
                      {{/if}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="realtime.accounts.account"
                      @model={{account}}
                    >
                      {{#if account.disabled}}
                        <i class="material-icons text-success">
                          check
                        </i>
                      {{else}}
                        <i class="material-icons text-danger">
                          clear
                        </i>
                      {{/if}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <a role="button" {{action "remove" account}}>
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-account-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{pagination}}
          @action="toPage"
          @showFL={{true}}
          @numPagesToShow={{4}}
        />
      </div>
    </div>
  </div>
</main>