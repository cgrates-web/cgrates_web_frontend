<div class="actions-subtitle">
  <h2>
    Account: {{model.id}}
  </h2>
  <ul class="actions">
    <li>
      <LinkTo
        @route="realtime.accounts.account.add-balance"
        @model={{model}}
        @title="Add balance"
      >
        <i
          class="material-icons circle btn btn-primary"
          data-test-account-blabce-add
        >
          account_balance_wallet
        </i>
      </LinkTo>
    </li>
  </ul>
</div>
<hr>
<div class="row">
  <div class="col-12 col-md-3">
    <h5>
      Id
    </h5>
    <p>
      {{model.id}}
    </p>
  </div>
  <div class="col-12 col-md-3">
    <h5>
      Balance
    </h5>
    <p>
      {{model.balance}}
    </p>
  </div>
  <div class="col-12 col-md-3">
    <h5>
      Allow negative
    </h5>
    <p>
      {{model.allowNegative}}
    </p>
  </div>
  <div class="col-12 col-md-3">
    <h5>
      Disabled
    </h5>
    <p>
      {{model.disabled}}
    </p>
  </div>
  <div class="col-12">
    <h5>
      Balance map (json)
    </h5>
    <p>
      {{#if model.balanceMap}}
        <JsonPretty @obj={{model.balanceMap}} />
      {{else}}
        Not present
      {{/if}}
    </p>
  </div>
  <div class="col-12">
    <h5>
      Action triggers (json)
    </h5>
    <p>
      {{#if model.unitCounters}}
        <JsonPretty @obj={{model.unitCounters}} />
      {{else}}
        Not present
      {{/if}}
    </p>
  </div>
  <div class="col-12">
    <h5>
      Unit counters (json)
    </h5>
    <p>
      {{#if model.actionTriggers}}
        <JsonPretty @obj={{model.actionTriggers}} />
      {{else}}
        Not present
      {{/if}}
    </p>
  </div>
</div>