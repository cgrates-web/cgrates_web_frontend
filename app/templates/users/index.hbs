<section class="page-header">
  <h1 class="page-title container">
    Users
  </h1>
</section>
<main class="page-content">
  <div class="container">
    <div class="actions-subtitle">
      <ul class="actions">
        <li>
          <LinkTo @route="users.new">
            <i class="material-icons circle btn btn-success" data-test-user-add>add</i>
          </LinkTo>
        </li>
      </ul>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <td>ID</td>
            <td>Email</td>
            <td>Inserted at</td>
            <td>Updated at</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          {{#each sortedUsers as |user|}}
            <tr>
              <td>
                <LinkTo @route="user.index" @model={{user}}>{{user.id}}</LinkTo>
              </td>
              <td>
                <LinkTo @route="user.index" @model={{user}}>{{user.email}}</LinkTo>
              </td>
              <td>
                <LinkTo @route="user.index" @model={{user}}>{{moment-format user.insertedAt}}</LinkTo>
              </td>
              <td>
                <LinkTo @route="user.index" @model={{user}}>{{moment-format user.updatedAt}}</LinkTo>
              </td>
              <td class="actions">
                <LinkTo @route="user.edit" @model={{user}}>
                  <i class="material-icons circle btn btn-primary" data-test-user-edit>edit</i>
                </LinkTo>
                <a {{action "remove" user}} role="button">
                  <i class="material-icons circle btn btn-danger" data-test-user-remove>remove</i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</main>