<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpDestinationRates list
      </h2>
      <ul class="actions">
        <li>
          <TpIndexButtons
            @model={{this.model}}
            @tariffPlanId={{this.tariffPlanId}}
            @permittedFilters={{permittedFilters}}
            @refresh="refresh"
            @controller={{this}}
          />
        </li>
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Tag"
                  @key="tag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  data-test-sort-tag={{true}}
                />
                <SortHeader
                  @label="Rounding method"
                  @key="roundingMethod"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Rounding decimals"
                  @key="roundingDecimals"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Rates tag"
                  @key="ratesTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Max cost strategy"
                  @key="maxCostStrategy"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Max cost"
                  @key="maxCost"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Destinations tag"
                  @key="destinationsTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpDestinationRate|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.tag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.roundingMethod}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.roundingDecimals}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.ratesTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.maxCostStrategy}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.maxCost}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{tpDestinationRate.destinationsTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate"
                      @model={{tpDestinationRate}}
                    >
                      {{moment-format tpDestinationRate.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-destination-rates.tp-destination-rate.edit"
                      @model={{tpDestinationRate}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-destination-rate-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpDestinationRate}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-destination-rate-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tag"
            @value={{filtersBlock.activeFilters.tag}}
            data-test-filter-tag
          />
          <FilterText
            @label="Rates tag"
            @value={{filtersBlock.activeFilters.ratesTag}}
            data-test-filter-rates-tag
          />
          <FilterText
            @label="Destinations tag"
            @value={{filtersBlock.activeFilters.destinationsTag}}
            data-test-filter-destinations-tag
          />
          <FilterNumber
            @label="Rounding decimals"
            @value={{filtersBlock.activeFilters.roundingDecimals}}
            @step="1"
            @min="0"
            data-test-filter-rounding-decimals
          />
          <FilterNumber
            @label="Max cost (decimal)"
            @value={{filtersBlock.activeFilters.maxCost}}
            @step="0.0001"
            @min="0"
            data-test-filter-max-cost
          />
          <FilterSelect
            @label="Rounding method"
            @key="roundingMethod"
            @value={{filtersBlock.activeFilters.roundingMethod}}
            @content={{selectValues.roundingMethod}}
            data-test-filter-rounding-method={{true}}
          />
          <FilterSelect
            @label="Max cost strategy"
            @key="maxCostStrategy"
            @value={{filtersBlock.activeFilters.maxCostStrategy}}
            @content={{selectValues.maxCostStrategy}}
            data-test-filter-max-cost-strategy={{true}}
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>