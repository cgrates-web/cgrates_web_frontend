<main class="page-content">
  <div class="container xxl">
    <div class="actions-subtitle">
      <h2>
        TpThresholds list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Custom ID"
                  @key="customId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Filter IDs"
                  @key="filterIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Activation interval"
                  @key="activationInterval"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Max hits"
                  @key="maxHits"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Min hits"
                  @key="minHits"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Min sleep"
                  @key="minSleep"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Action IDs"
                  @key="actionIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Blocker"
                  @key="blocker"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Async"
                  @key="async"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpThreshold|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.customId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.filterIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.activationInterval}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.maxHits}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.minHits}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.minSleep}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.actionIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.blocker}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.async}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{tpThreshold.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold"
                      @model={{tpThreshold}}
                    >
                      {{moment-format tpThreshold.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-thresholds.tp-threshold.edit"
                      @model={{tpThreshold}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-threshold-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpThreshold}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-threshold-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tenant"
            @value={{filtersBlock.activeFilters.tenant}}
            data-test-filter-tenant
          />
          <FilterText
            @label="Custom ID"
            @value={{filtersBlock.activeFilters.customId}}
            data-test-filter-customid
          />
          <FilterText
            @label="Filter IDs"
            @value={{filtersBlock.activeFilters.filterIds}}
            data-test-filter-filter-ids
          />
          <FilterText
            @label="Action IDs"
            @value={{filtersBlock.activeFilters.actionIds}}
            data-test-filter-action-ids
          />
          <FilterText
            @label="Activation interval"
            @value={{filtersBlock.activeFilters.activationInterval}}
            data-test-filter-activation-interval
          />
          <FilterNumber
            @label="Max hits"
            @value={{filtersBlock.activeFilters.maxHits}}
            @min="0"
            data-test-filter-max-hits
          />
          <FilterNumber
            @label="Min hits"
            @value={{filtersBlock.activeFilters.minHits}}
            @min="0"
            data-test-filter-min-hits
          />
          <FilterNumber
            @label="Min slleep"
            @value={{filtersBlock.activeFilters.minSleep}}
            @min="0"
            data-test-filter-min-sleep
          />
          <FilterSelect
            @label="Blocker"
            @value={{filtersBlock.activeFilters.blocker}}
            @content={{selectValues.boolean}}
            data-test-filter-blocker={{true}}
          />
          <FilterSelect
            @label="Async"
            @value={{filtersBlock.activeFilters.async}}
            @content={{selectValues.boolean}}
            data-test-filter-async={{true}}
          />
          <FilterNumber
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            @step="0.1"
            @min="0"
            data-test-filter-weight
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>