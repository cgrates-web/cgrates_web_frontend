<main class="page-content">
  <div class="container xxl">
    <div class="actions-subtitle">
      <h2>TpResources list</h2>
      <ul class="actions">
        {{tp-index-buttons
          model=model
          tariffPlanId=tariffPlanId
          permittedFilters=permittedFilters
          refresh="refresh"
          controller=this
        }}
      </ul>
    </div>
    {{total-records totalRecords=meta.total_records}}
    <div class="row">
      <div class=" col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                {{sort-header
                  label="ID"
                  key="id"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Tenant"
                  key="tenant"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                  data-test-sort-tenant=true
                }}
                {{sort-header
                  label="Custom ID"
                  key="customId"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Filter IDs"
                  key="filterIds"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Activation interval"
                  key="activationInterval"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Usage ttl"
                  key="usageTtl"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Limit"
                  key="limit"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Allocation message"
                  key="allocationMessage"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Blocker"
                  key="blocker"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Stored"
                  key="stored"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Weight"
                  key="weight"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Threshold IDs"
                  key="thresholdIds"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Created at"
                  key="createdAt"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                <td>Actions</td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpResource|}}
                <tr>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.id}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.tenant}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.customId}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.filterIds}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.activationInterval}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.usageTtl}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.limit}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.allocationMessage}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.blocker}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.stored}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.weight}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}{{tpResource.thresholdIds}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-resources.tp-resource" tpResource}}
                      {{moment-format tpResource.createdAt}}
                    {{/link-to}}
                  </td>
                  <td class="actions">
                    {{#link-to "tariff-plan.tp-resources.tp-resource.edit" tpResource}}
                      <i class="material-icons circle btn btn-primary" data-test-resource-edit>edit</i>
                    {{/link-to}}
                    <a {{action "remove" tpResource}} class="ml-1" role="button">
                      <i class="material-icons circle btn btn-danger" data-test-resource-remove>remove</i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{page-numbers content=pagination action="toPage" showFL=true numPagesToShow=4}}
      </div>
      <div class="col-md-3">
        {{#filters-block search=(action "search") as |filtersBlock|}}
          {{filter-text
            label="Tenant"
            key="tenant"
            value=tenant
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-tenant=true
          }}
          {{filter-text
            label="Custom ID"
            key="customId"
            value=customId
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-customid=true
          }}
          {{filter-text
            label="Filter IDs"
            key="filterIds"
            value=filterIds
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-filter-ids=true
          }}
          {{filter-text
            label="Threshold IDs"
            key="thresholdIds"
            value=thresholdIds
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-threshold-ids=true
          }}
          {{filter-text
            label="Activation interval"
            key="activationInterval"
            value=activationInterval
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-activation-interval=true
          }}
          {{filter-text
            label="Usage ttl"
            key="usageTtl"
            value=usageTtl
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-usage-ttl=true
          }}
          {{filter-text
            label="Limit"
            key="limit"
            value=limit
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-limit=true
          }}
          {{filter-text
            label="Allocation message"
            key="allocationMessage"
            value=allocationMessage
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-allocation-message=true
          }}
          {{filter-select
            label="Blocker"
            key="blocker"
            value=blocker
            onValueChange=(action "pushValue" target=filtersBlock)
            content=selectValues.boolean
            data-test-filter-blocker=true
          }}
          {{filter-select
            label="Stored"
            key="stored"
            value=stored
            onValueChange=(action "pushValue" target=filtersBlock)
            content=selectValues.boolean
            data-test-filter-stored=true
          }}
          {{filter-number
            label="Weight"
            key="weight"
            value=weight
            onValueChange=(action "pushValue" target=filtersBlock)
            step="0.1"
            min="0"
            data-test-filter-weight=true
          }}
        {{/filters-block}}
      </div>
    </div>
  </div>
</main>