<main class="page-content">
  <div class="container xxl">
    <div class="actions-subtitle">
      <h2>
        TpResources list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh={{route-action "refresh"}}
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Custom ID"
                  @key="customId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Filter IDs"
                  @key="filterIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Activation interval"
                  @key="activationInterval"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Usage ttl"
                  @key="usageTtl"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Limit"
                  @key="limit"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Allocation message"
                  @key="allocationMessage"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Blocker"
                  @key="blocker"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Stored"
                  @key="stored"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Threshold IDs"
                  @key="thresholdIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpResource|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.customId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.filterIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.activationInterval}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.usageTtl}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.limit}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.allocationMessage}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.blocker}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.stored}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{tpResource.thresholdIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource"
                      @model={{tpResource}}
                    >
                      {{moment-format tpResource.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-resources.tp-resource.edit"
                      @model={{tpResource}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-resource-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpResource}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-resource-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tenant"
            @value={{filtersBlock.activeFilters.tenant}}
            data-test-filter-tenant
          />
          <FilterText
            @label="Custom ID"
            @value={{filtersBlock.activeFilters.customId}}
            data-test-filter-customid
          />
          <FilterText
            @label="Filter IDs"
            @value={{filtersBlock.activeFilters.filterIds}}
            data-test-filter-filter-ids
          />
          <FilterText
            @label="Threshold IDs"
            @value={{filtersBlock.activeFilters.thresholdIds}}
            data-test-filter-threshold-ids
          />
          <FilterText
            @label="Activation interval"
            @value={{filtersBlock.activeFilters.activationInterval}}
            data-test-filter-activation-interval
          />
          <FilterText
            @label="Usage ttl"
            @value={{filtersBlock.activeFilters.usageTtl}}
            data-test-filter-usage-ttl
          />
          <FilterText
            @label="Limit"
            @value={{filtersBlock.activeFilters.limit}}
            data-test-filter-limit
          />
          <FilterText
            @label="Allocation message"
            @value={{filtersBlock.activeFilters.allocationMessage}}
            data-test-filter-allocation-message
          />
          <FilterSelect
            @label="Blocker"
            @value={{filtersBlock.activeFilters.blocker}}
            @content={{selectValues.boolean}}
            data-test-filter-blocker={{true}}
          />
          <FilterSelect
            @label="Stored"
            @value={{filtersBlock.activeFilters.stored}}
            @content={{selectValues.boolean}}
            data-test-filter-stored={{true}}
          />
          <FilterNumber
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            @step="0.1"
            @min="0"
            data-test-filter-weight
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>