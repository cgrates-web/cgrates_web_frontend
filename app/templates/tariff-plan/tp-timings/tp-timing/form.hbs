{{#bs-form model=model onSubmit=(perform save) novalidate=true as |form|}}
  <div class='form-row'>
    {{form.element
      label='Tag'
      property='tag'
      class='col-md-6'
      data-test-tag=true
    }}
    {{form.element
      label='Years'
      property='years'
      class='col-md-6'
      data-test-years=true
    }}
    {{form.element
      label='Months'
      property='months'
      class='col-md-6'
      data-test-months=true
    }}
    {{form.element
      label='Month Days'
      property='monthDays'
      class='col-md-6'
      data-test-month-days=true
    }}
    {{form.element
      label='Week Days'
      property='weekDays'
      class='col-md-6'
      data-test-week-days=true
    }}
    {{form.element
      label='Time'
      property='time'
      class='col-md-6'
      data-test-time=true
    }}
  </div>
  {{#bs-button
    type='primary'
    buttonType='submit'
    disabled=form.isSubmitting
    data-test-submit-button=true
  }}
    {{loading-button-text text='Save' isLoading=form.isSubmitting}}
  {{/bs-button}}
{{/bs-form}}