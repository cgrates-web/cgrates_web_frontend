<main class="page-content">
  <div class="container xxl">
    <div class="actions-subtitle">
      <h2>
        TpSharedGroups list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{model}}
          @tariffPlanId={{tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Tag"
                  @key="tag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-tag={{true}}
                />
                <SortHeader
                  @label="Account"
                  @key="account"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Strategy"
                  @key="strategy"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Rating subject"
                  @key="ratingSubject"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpSharedGroup|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group"
                      @model={{tpSharedGroup}}
                    >
                      {{tpSharedGroup.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group"
                      @model={{tpSharedGroup}}
                    >
                      {{tpSharedGroup.tag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group"
                      @model={{tpSharedGroup}}
                    >
                      {{tpSharedGroup.account}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group"
                      @model={{tpSharedGroup}}
                    >
                      {{tpSharedGroup.strategy}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group"
                      @model={{tpSharedGroup}}
                    >
                      {{tpSharedGroup.ratingSubject}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group"
                      @model={{tpSharedGroup}}
                    >
                      {{moment-format tpSharedGroup.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-shared-groups.tp-shared-group.edit"
                      @model={{tpSharedGroup}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-shared-group-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpSharedGroup}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-shared-group-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{pagination}}
          @action="toPage"
          @showFL={{true}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock @search={{action "search"}} as |filtersBlock|>
          <FilterText
            @label="Tag"
            @key="tag"
            @value={{tag}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-tag={{true}}
          />
          <FilterText
            @label="Account"
            @key="account"
            @value={{account}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-account={{true}}
          />
          <FilterText
            @label="Strategy"
            @key="strategy"
            @value={{strategy}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-strategy={{true}}
          />
          <FilterText
            @label="Rating subject"
            @key="ratingSubject"
            @value={{ratingSubject}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-rating-subject={{true}}
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>