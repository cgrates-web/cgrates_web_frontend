<main class="page-content">
  <div class="container xxl">
    <div class="actions-subtitle">
      <h2>TpSharedGroups list</h2>
      <ul class="actions">
        {{tp-index-buttons
          model=model
          tariffPlanId=tariffPlanId
          permittedFilters=permittedFilters
          refresh="refresh"
          controller=this
        }}
      </ul>
    </div>
    {{total-records totalRecords=meta.total_records}}
    <div class="row">
      <div class=" col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                {{sort-header
                  label="ID"
                  key="id"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                {{sort-header
                  label="Tag"
                  key="tag"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                  data-test-sort-tag=true
                }}
                {{sort-header
                  label="Account"
                  key="account"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                  data-test-sort-tenant=true
                }}
                {{sort-header
                  label="Strategy"
                  key="strategy"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                  data-test-sort-tenant=true
                }}
                {{sort-header
                  label="Rating subject"
                  key="ratingSubject"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                  data-test-sort-tenant=true
                }}
                {{sort-header
                  label="Created at"
                  key="createdAt"
                  sortColumn=sortColumn
                  sortOrder=sortOrder
                  sortAction="sortBy"
                }}
                <td>Actions</td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpSharedGroup|}}
                <tr>
                  <td>
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group" tpSharedGroup}}{{tpSharedGroup.id}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group" tpSharedGroup}}{{tpSharedGroup.tag}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group" tpSharedGroup}}{{tpSharedGroup.account}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group" tpSharedGroup}}{{tpSharedGroup.strategy}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group" tpSharedGroup}}{{tpSharedGroup.ratingSubject}}{{/link-to}}
                  </td>
                  <td>
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group" tpSharedGroup}}
                      {{moment-format tpSharedGroup.createdAt}}
                    {{/link-to}}
                  </td>
                  <td class="actions">
                    {{#link-to "tariff-plan.tp-shared-groups.tp-shared-group.edit" tpSharedGroup}}
                      <i class="material-icons circle btn btn-primary" data-test-shared-group-edit>edit</i>
                    {{/link-to}}
                    <a {{action "remove" tpSharedGroup}} class="ml-1" role="button">
                      <i class="material-icons circle btn btn-danger" data-test-shared-group-remove>remove</i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        {{page-numbers content=pagination action="toPage" showFL=true numPagesToShow=4}}
      </div>
      <div class="col-md-3">
        {{#filters-block search=(action "search") as |filtersBlock|}}
          {{filter-text
            label="Tag"
            key="tag"
            value=tag
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-tag=true
          }}
          {{filter-text
            label="Account"
            key="account"
            value=account
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-account=true
          }}
          {{filter-text
            label="Strategy"
            key="strategy"
            value=strategy
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-strategy=true
          }}
          {{filter-text
            label="Rating subject"
            key="ratingSubject"
            value=ratingSubject
            onValueChange=(action "pushValue" target=filtersBlock)
            data-test-filter-rating-subject=true
          }}
        {{/filters-block}}
      </div>
    </div>
  </div>
</main>