<main class="page-content">
  <div class="container xxl">
    <div class="actions-subtitle">
      <h2>
        TpActionTriggers list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh={{route-action "refresh"}}
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tag"
                  @key="tag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tag={{true}}
                />
                <SortHeader
                  @label="Unique ID"
                  @key="uniqueId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Threshold type"
                  @key="thresholdType"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Threshold value"
                  @key="thresholdValue"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="recurrent"
                  @key="recurrent"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Min sleep"
                  @key="minSleep"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Expiry time"
                  @key="expiryTime"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Activation time"
                  @key="activationTime"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Balance tag"
                  @key="balanceTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Balance type"
                  @key="balanceType"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Actions tag"
                  @key="actionsTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpActionTrigger|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.tag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.uniqueId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.thresholdType}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.thresholdValue}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.recurrent}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.minSleep}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.expiryTime}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.activationTime}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.balanceTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.balanceType}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.actionsTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{tpActionTrigger.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger"
                      @model={{tpActionTrigger}}
                    >
                      {{moment-format tpActionTrigger.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-action-triggers.tp-action-trigger.edit"
                      @model={{tpActionTrigger}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-action-trigger-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpActionTrigger}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-action-trigger-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tag"
            @value={{filtersBlock.activeFilters.tag}}
            data-test-filter-tag
          />
          <FilterText
            @label="Unique id"
            @value={{filtersBlock.activeFilters.uniqueId}}
            data-test-filter-unique-id
          />
          <FilterSelect
            @label="Threshold type"
            @value={{filtersBlock.activeFilters.thresholdType}}
            @content={{selectValues.thresholdType}}
            data-test-filter-threshold-type={{true}}
          />
          <FilterNumber
            @label="Threshold value"
            @value={{filtersBlock.activeFilters.thresholdValue}}
            @min="0"
            data-test-filter-threshold-value
          />
          <FilterSelect
            @label="Recurrent"
            @value={{filtersBlock.activeFilters.recurrent}}
            @content={{selectValues.boolean}}
            data-test-filter-recurrent={{true}}
          />
          <FilterText
            @label="Min sleep"
            @value={{filtersBlock.activeFilters.minSleep}}
            data-test-filter-min-sleep
          />
          <FilterText
            @label="Expiry time"
            @value={{filtersBlock.activeFilters.expiryTime}}
            data-test-filter-expiry-time
          />
          <FilterText
            @label="Activation time"
            @value={{filtersBlock.activeFilters.activationTime}}
            data-test-filter-activation-time
          />
          <FilterSelect
            @label="Balance tag"
            @value={{filtersBlock.activeFilters.balanceTag}}
            @content={{selectValues.balanceTag}}
            data-test-filter-balance-tag={{true}}
          />
          <FilterSelect
            @label="Balance type"
            @value={{filtersBlock.activeFilters.balanceType}}
            @content={{selectValues.balanceType}}
            data-test-filter-balance-type={{true}}
          />
          <FilterSelectSearchToString
            @label="Actions tag"
            @value={{filtersBlock.activeFilters.actionsTag}}
            @searchModel="tp-action"
            @searchField="tag"
            @tpid={{this.tariffPlanId}}
            data-test-filter-actions-tag={{true}}
          />
          <FilterNumber
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            @step="0.1"
            @min="0"
            data-test-filter-weight
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>