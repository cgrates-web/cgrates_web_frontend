<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpAliases list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh={{route-action "refresh"}}
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Direction"
                  @key="direction"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Category"
                  @key="category"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Account"
                  @key="account"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Subject"
                  @key="subject"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Destination ID"
                  @key="destinationId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Context"
                  @key="context"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Target"
                  @key="target"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Original"
                  @key="original"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Alias"
                  @key="alias"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpAlias|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.direction}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.category}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.account}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.subject}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.destinationId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.context}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.target}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.original}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.alias}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{tpAlias.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias"
                      @model={{tpAlias}}
                    >
                      {{moment-format tpAlias.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-aliases.tp-alias.edit"
                      @model={{tpAlias}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-alias-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a class="ml-1" role="button" {{action "remove" tpAlias}}>
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-alias-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tenant"
            @value={{filtersBlock.activeFilters.tenant}}
            data-test-filter-tenant
          />
          <FilterText
            @label="Direction"
            @value={{filtersBlock.activeFilters.direction}}
            data-test-filter-direction
          />
          <FilterText
            @label="Account"
            @value={{filtersBlock.activeFilters.account}}
            data-test-filter-account
          />
          <FilterText
            @label="Destination ID"
            @value={{filtersBlock.activeFilters.destinationId}}
            data-test-filter-destination-id
          />
          <FilterText
            @label="Category"
            @value={{filtersBlock.activeFilters.category}}
            data-test-filter-category
          />
          <FilterText
            @label="Subject"
            @value={{filtersBlock.activeFilters.subject}}
            data-test-filter-subject
          />
          <FilterText
            @label="Context"
            @value={{filtersBlock.activeFilters.context}}
            data-test-filter-context
          />
          <FilterText
            @label="Target"
            @value={{filtersBlock.activeFilters.targetParam}}
            data-test-filter-target
          />
          <FilterText
            @label="Original"
            @value={{filtersBlock.activeFilters.original}}
            data-test-filter-original
          />
          <FilterText
            @label="Alias"
            @value={{filtersBlock.activeFilters.alias}}
            data-test-filter-alias
          />
          <FilterNumber
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            @step="0.1"
            @min="0"
            data-test-filter-weight
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>