<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>TpAliases list</h2>
      <ul class="actions">
        {{tp-index-buttons
          model=model
          tariffPlanId=tariffPlanId
          permittedFilters=permittedFilters
          refresh='refresh'
          controller=this
        }}
      </ul>
    </div>
    {{total-records totalRecords=meta.total_records}}
    <div class="row">
      <div class=" col-md-9">
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
            <tr>
              {{sort-header label='ID' key='id' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Tenant' key='tenant' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy' data-test-sort-tenant=true}}
              {{sort-header label='Direction' key='direction' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Category' key='category' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Account' key='account' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Subject' key='subject' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Destination ID' key='destinationId' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Context' key='context' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Target' key='target' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Original' key='original' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Alias' key='alias' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Weight' key='weight' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Created at' key='createdAt' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {{#each model as |tpAlias|}}
              <tr>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.id}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.tenant}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.direction}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.category}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.account}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.subject}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.destinationId}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.context}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.target}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.original}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.alias}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{tpAlias.weight}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias' tpAlias}}{{moment-format tpAlias.createdAt}}{{/link-to}}
                </td>
                <td class="actions">
                  {{#link-to 'tariff-plan.tp-aliases.tp-alias.edit' tpAlias}}
                    <i class="material-icons circle btn btn-primary" data-test-tp-alias-edit>edit</i>
                  {{/link-to}}
                  <a {{action 'remove' tpAlias}} class="ml-1">
                    <i class="material-icons circle btn btn-danger" data-test-tp-alias-remove>remove</i>
                  </a>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
        {{page-numbers content=pagination action='toPage' showFL=true numPagesToShow=4  showFL=true numPagesToShow=4}}
      </div>
      <div class="col-md-3">
        {{#filters-block search=(action 'search') as |filtersBlock|}}
          {{filter-text
            label='Tenant'
            key='tenant'
            value=tenant
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-tenant=true
          }}
          {{filter-text
            label='Direction'
            key='direction'
            value=direction
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-direction=true
          }}
          {{filter-text
            label='Account'
            key='account'
            value=account
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-account=true
          }}
          {{filter-text
            label='Destination ID'
            key='destinationId'
            value=destinationId
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-destination-id=true
          }}
          {{filter-text
            label='Category'
            key='category'
            value=category
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-category=true
          }}
          {{filter-text
            label='Subject'
            key='subject'
            value=subject
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-subject=true
          }}
          {{filter-text
            label='Context'
            key='context'
            value=context
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-context=true
          }}
          {{filter-text
            label='Target'
            key='targetParam'
            value=targetParam
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-target=true
          }}
          {{filter-text
            label='Original'
            key='original'
            value=original
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-original=true
          }}
          {{filter-text
            label='Alias'
            key='alias'
            value=alias
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-alias=true
          }}
          {{filter-number
            label='Weight'
            key='weight'
            value=weight
            onValueChange=(action 'pushValue' target=filtersBlock)
            step='0.1'
            min='0'
            data-test-filter-weight=true
          }}
        {{/filters-block}}
      </div>
    </div>
  </div>
</main>