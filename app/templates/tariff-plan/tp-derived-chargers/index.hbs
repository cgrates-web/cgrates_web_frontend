<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpDerivedChargers list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Load ID"
                  @key="loadid"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Direction"
                  @key="direction"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Category"
                  @key="category"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Account"
                  @key="account"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Subject"
                  @key="subject"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Destination tags"
                  @key="destinationIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpDerivedCharger|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.loadid}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.direction}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.category}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.account}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.subject}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{tpDerivedCharger.destinationIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger"
                      @model={{tpDerivedCharger}}
                    >
                      {{moment-format tpDerivedCharger.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-derived-chargers.tp-derived-charger.edit"
                      @model={{tpDerivedCharger}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-derived-charger-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpDerivedCharger}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-derived-charger-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Load ID"
            @value={{filtersBlock.activeFilters.loadid}}
            data-test-filter-loadid
          />
          <FilterText
            @label="Direction"
            @value={{filtersBlock.activeFilters.direction}}
            data-test-filter-direction
          />
          <FilterText
            @value={{filtersBlock.activeFilters.tenant}}
            data-test-filter-tenant
          />
          <FilterText
            @label="Category"
            @value={{filtersBlock.activeFilters.category}}
            data-test-filter-category
          />
          <FilterText
            @label="Account"
            @value={{filtersBlock.activeFilters.account}}
            data-test-filter-account
          />
          <FilterText
            @label="Subject"
            @value={{filtersBlock.activeFilters.subject}}
            data-test-filter-subject
          />
          <FilterSelectSearchToString
            @label="Destination tags"
            @value={{filtersBlock.activeFilters.destinationIds}}
            @searchModel="tp-destination"
            @searchField="tag"
            @tpid={{this.tariffPlanId}}
            @multiple={{true}}
            data-test-filter-destination-ids={{true}}
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>