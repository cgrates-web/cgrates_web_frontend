<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>TpActionPlans list</h2>
      <ul class="actions">
        {{tp-index-buttons
          model=model
          tariffPlanId=tariffPlanId
          permittedFilters=permittedFilters
          refresh='refresh'
          controller=this
        }}
      </ul>
    </div>
    <div class="row">
      <div class=" col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              {{sort-header label='ID'          key='id'          sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Tag'         key='tag'         sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy' data-test-sort-tag=true}}
              {{sort-header label='Actions tag' key='actionsTag'  sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Timing tag'  key='timingTag'   sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Weight'      key='weight'      sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Created at'  key='createdAt'   sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {{#each model as |tpActionPlan|}}
              <tr>
                <td>
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan' tpActionPlan}}{{tpActionPlan.id}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan' tpActionPlan}}{{tpActionPlan.tag}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan' tpActionPlan}}{{tpActionPlan.actionsTag}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan' tpActionPlan}}{{tpActionPlan.timingTag}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan' tpActionPlan}}{{tpActionPlan.weight}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan' tpActionPlan}}{{moment-format tpActionPlan.createdAt}}{{/link-to}}
                </td>
                <td class="actions">
                  {{#link-to 'tariff-plan.tp-action-plans.tp-action-plan.edit' tpActionPlan}}
                    <i class="material-icons circle btn btn-primary" data-test-tp-action-plan-edit>edit</i>
                  {{/link-to}}
                  <a {{action 'remove' tpActionPlan}}>
                    <i class="material-icons circle btn btn-danger" data-test-tp-action-plan-remove>remove</i>
                  </a>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
        {{page-numbers content=pagination action='toPage'}}
      </div>
      <div class="col-md-3">
        {{#filters-block search='search' as |filtersBlock|}}
          {{#filter-text
            label='Tag'
            key='tag'
            value=tag
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-tag=true
          }}{{/filter-text}}
          {{#filter-text
            label='Actions tag'
            key='actionsTag'
            value=actionsTag
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-actions-tag=true
          }}{{/filter-text}}
          {{#filter-text
            label='Timing tag'
            key='timingTag'
            value=timingTag
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-timing-tag=true
          }}{{/filter-text}}
          {{#filter-number
            label='Weight'
            key='weight'
            value=weight
            onValueChange=(action 'pushValue' target=filtersBlock) step='0.1' min='0'
            data-test-filter-weight=true
          }}{{/filter-number}}
        {{/filters-block}}
      </div>
    </div>
  </div>
</main>