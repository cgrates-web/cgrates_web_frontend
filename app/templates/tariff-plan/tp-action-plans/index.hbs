<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpActionPlans list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tag"
                  @key="tag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tag={{true}}
                />
                <SortHeader
                  @label="Actions tag"
                  @key="actionsTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Timing tag"
                  @key="timingTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpActionPlan|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan"
                      @model={{tpActionPlan}}
                    >
                      {{tpActionPlan.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan"
                      @model={{tpActionPlan}}
                    >
                      {{tpActionPlan.tag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan"
                      @model={{tpActionPlan}}
                    >
                      {{tpActionPlan.actionsTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan"
                      @model={{tpActionPlan}}
                    >
                      {{tpActionPlan.timingTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan"
                      @model={{tpActionPlan}}
                    >
                      {{tpActionPlan.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan"
                      @model={{tpActionPlan}}
                    >
                      {{moment-format tpActionPlan.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-action-plans.tp-action-plan.edit"
                      @model={{tpActionPlan}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-action-plan-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a role="button" {{action "remove" tpActionPlan}}>
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-action-plan-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tag"
            @value={{filtersBlock.activeFilters.tag}}
            data-test-filter-tag
          />
          {
          <FilterText
            @label="Actions tag"
            @value={{filtersBlock.activeFilters.actionsTag}}
            data-test-filter-actions-tag
          />
          <FilterText
            @label="Timing tag"
            @value={{filtersBlock.activeFilters.timingTag}}
            data-test-filter-timing-tag
          />
          <FilterNumber
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            @step="0.1"
            @min="0"
            data-test-filter-weight
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>