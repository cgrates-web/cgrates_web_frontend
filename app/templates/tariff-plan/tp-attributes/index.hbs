<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpAttributes list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh={{route-action "refresh"}}
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Custom ID"
                  @key="customId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Contexts"
                  @key="contexts"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Filter IDs"
                  @key="filterIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Activation interval"
                  @key="activationInterval"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Type"
                  @key="cgType"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Path"
                  @key="path"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Value"
                  @key="Value"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpAttribute|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.customId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.contexts}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.filterIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.activationInterval}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{moment-format tpAttribute.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute.edit"
                      @model={{tpAttribute}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-attribute-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpAttribute}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-attribute-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Tenant"
            @value={{filtersBlock.activeFilters.tenant}}
            data-test-filter-tenant={{true}}
          />
          <FilterText
            @label="Custom ID"
            @value={{filtersBlock.activeFilters.customId}}
            data-test-filter-customid={{true}}
          />
          <FilterText
            @label="Contexts"
            @value={{filtersBlock.activeFilters.contexts}}
            data-test-filter-contexts={{true}}
          />
          <FilterText
            @label="Filter ids"
            @value={{filtersBlock.activeFilters.filterIds}}
            data-test-filter-filter-ids={{true}}
          />
          <FilterText
            @label="Activation interval"
            @value={{filtersBlock.activeFilters.activationInterval}}
            data-test-filter-activation-interval={{true}}
          />
          <FilterSelect
            @label="Blocker"
            @value={{filtersBlock.activeFilters.blocker}}
            @content={{this.selectValues.boolean}}
            data-test-filter-blocker={{true}}
          />
          <FilterSelect
            @label="Type"
            @value={{filtersBlock.activeFilters.type}}
            @content={{this.selectValues.boolean}}
            data-test-filter-type={{true}}
          />
          <FilterSelect
            @label="Path"
            @value={{filtersBlock.activeFilters.path}}
            @content={{this.selectValues.boolean}}
            data-test-filter-path={{true}}
          />
          <FilterSelect
            @label="Value"
            @value={{filtersBlock.activeFilters.value}}
            @content={{this.selectValues.boolean}}
            data-test-filter-value={{true}}
          />
          <FilterNumber
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            @step="0.1"
            @min="0"
            data-test-filter-weight
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>