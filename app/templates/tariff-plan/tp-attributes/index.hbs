<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>TpAttributes list</h2>
      <ul class="actions">
        {{tp-index-buttons
          model=model
          tariffPlanId=tariffPlanId
          permittedFilters=permittedFilters
          refresh='refresh'
          controller=this
        }}
      </ul>
    </div>
    {{partial 'partials/total-records'}}
    <div class="row">
      <div class=" col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
            <tr>
              {{sort-header label='ID' key='id' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Tenant' key='tenant' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy' data-test-sort-tenant=true}}
              {{sort-header label='Custom ID' key='customId' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Contexts' key='contexts' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Filter Ids' key='filterIds' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Activation interval' key='activationInterval' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Field name' key='fieldName' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Initial' key='initial' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Substitute' key='substitute' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Weight' key='weight' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              {{sort-header label='Created at' key='createdAt' sortColumn=sortColumn sortOrder=sortOrder sortAction='sortBy'}}
              <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {{#each model as |tpAttribute|}}
              <tr>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.id}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.tenant}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.customId}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.contexts}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.filterIds}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.activationInterval}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.fieldName}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.initial}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.substitute}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}{{tpAttribute.weight}}{{/link-to}}
                </td>
                <td>
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute' tpAttribute}}
                    {{moment-format tpAttribute.createdAt}}
                  {{/link-to}}
                </td>
                <td class="actions">
                  {{#link-to 'tariff-plan.tp-attributes.tp-attribute.edit' tpAttribute}}
                    <i class="material-icons circle btn btn-primary" data-test-attribute-edit>edit</i>
                  {{/link-to}}
                  <a {{action 'remove' tpAttribute}} class="ml-1">
                    <i class="material-icons circle btn btn-danger" data-test-attribute-remove>remove</i>
                  </a>
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
        {{page-numbers content=pagination action='toPage' showFL=true numPagesToShow=4}}
      </div>
      <div class="col-md-3">
        {{#filters-block search=(action 'search') as |filtersBlock|}}
          {{filter-text
            label='Tenant'
            key='tenant'
            value=tenant
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-tenant=true
          }}
          {{filter-text
            label='Custom ID'
            key='customId'
            value=customId
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-customid=true
          }}
          {{filter-text
            label='Contexts'
            key='contexts'
            value=contexts
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-contexts=true
          }}
          {{filter-text
            label='Filter ids'
            key='filterIds'
            value=filterIds
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-filter-ids=true
          }}
          {{filter-text
            label='Activation interval'
            key='activationInterval'
            value=activationInterval
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-activation-interval=true
          }}
          {{filter-text
            label='Field name'
            key='fieldName'
            value=fieldName
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-field-name=true
          }}
          {{filter-text
            label='Initial'
            key='initial'
            value=initial
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-initial=true
          }}
          {{filter-text
            label='Substitute'
            key='substitute'
            value=substitute
            onValueChange=(action 'pushValue' target=filtersBlock)
            data-test-filter-substitute=true
          }}
          {{filter-select
            label='Append'
            key='append'
            value=append
            onValueChange=(action 'pushValue' target=filtersBlock)
            content=selectValues.boolean
            data-test-filter-append=true
          }}
          {{filter-select
            label='Blocker'
            key='blocker'
            value=blocker
            onValueChange=(action 'pushValue' target=filtersBlock)
            content=selectValues.boolean
            data-test-filter-blocker=true
          }}
          {{filter-number
            label='Weight'
            key='weight'
            value=weight
            onValueChange=(action 'pushValue' target=filtersBlock)
            step='0.1'
            min='0'
            data-test-filter-weight=true
          }}
        {{/filters-block}}
      </div>
    </div>
  </div>
</main>