<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpAttributes list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Custom ID"
                  @key="customId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Contexts"
                  @key="contexts"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Filter IDs"
                  @key="filterIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Activation interval"
                  @key="activationInterval"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Field name"
                  @key="fieldName"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Initial"
                  @key="initial"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Substitute"
                  @key="substitute"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpAttribute|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.customId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.contexts}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.filterIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.activationInterval}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.fieldName}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.initial}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.substitute}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{tpAttribute.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute"
                      @model={{tpAttribute}}
                    >
                      {{moment-format tpAttribute.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-attributes.tp-attribute.edit"
                      @model={{tpAttribute}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-attribute-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpAttribute}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-attribute-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock @search={{action "search"}} as |filtersBlock|>
          <FilterText
            @label="Tenant"
            @key="tenant"
            @value={{tenant}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-tenant={{true}}
          />
          <FilterText
            @label="Custom ID"
            @key="customId"
            @value={{customId}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-customid={{true}}
          />
          <FilterText
            @label="Contexts"
            @key="contexts"
            @value={{contexts}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-contexts={{true}}
          />
          <FilterText
            @label="Filter ids"
            @key="filterIds"
            @value={{filterIds}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-filter-ids={{true}}
          />
          <FilterText
            @label="Activation interval"
            @key="activationInterval"
            @value={{activationInterval}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-activation-interval={{true}}
          />
          <FilterText
            @label="Field name"
            @key="fieldName"
            @value={{fieldName}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-field-name={{true}}
          />
          <FilterText
            @label="Initial"
            @key="initial"
            @value={{initial}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-initial={{true}}
          />
          <FilterText
            @label="Substitute"
            @key="substitute"
            @value={{substitute}}
            @onValueChange={{filtersBlock.pushValue}}
            @data-test-filter-substitute={{true}}
          />
          <FilterSelect
            @label="Append"
            @key="append"
            @value={{append}}
            @onValueChange={{filtersBlock.pushValue}}
            @content={{selectValues.boolean}}
            @data-test-filter-append={{true}}
          />
          <FilterSelect
            @label="Blocker"
            @key="blocker"
            @value={{blocker}}
            @onValueChange={{filtersBlock.pushValue}}
            @content={{selectValues.boolean}}
            @data-test-filter-blocker={{true}}
          />
          <FilterNumber
            @label="Weight"
            @key="weight"
            @value={{weight}}
            @onValueChange={{filtersBlock.pushValue}}
            @step="0.1"
            @min="0"
            @data-test-filter-weight={{true}}
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>