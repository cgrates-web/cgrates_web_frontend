<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpLcrRules list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{model}}
          @tariffPlanId={{tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Direction"
                  @key="direction"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Category"
                  @key="category"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Account"
                  @key="account"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Subject"
                  @key="subject"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Destination tag"
                  @key="destinationTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                  @data-test-sort-destination-tag={{true}}
                />
                <SortHeader
                  @label="RP category"
                  @key="rpCategory"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Strategy"
                  @key="strategy"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction="sortBy"
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpLcrRule|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.direction}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.category}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.account}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.subject}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.destinationTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.rpCategory}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{tpLcrRule.strategy}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule"
                      @model={{tpLcrRule}}
                    >
                      {{moment-format tpLcrRule.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-lcr-rules.tp-lcr-rule.edit"
                      @model={{tpLcrRule}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-lcr-rule-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a class="ml-1" role="button" {{action "remove" tpLcrRule}}>
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-lcr-rule-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{pagination}}
          @action="toPage"
          @showFL={{true}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock @search={{action "search"}} as |filtersBlock|>
          <FilterSelect
            @label="Direction"
            @key="direction"
            @value={{direction}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @content={{selectValues.direction}}
            @data-test-filter-direction={{true}}
          />
          <FilterText
            @label="Tenant"
            @key="tenant"
            @value={{tenant}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-tenant={{true}}
          />
          <FilterText
            @label="Category"
            @key="category"
            @value={{category}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-category={{true}}
          />
          <FilterText
            @label="Account"
            @key="account"
            @value={{account}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-account={{true}}
          />
          <FilterText
            @label="Subject"
            @key="subject"
            @value={{subject}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-subject={{true}}
          />
          <FilterText
            @label="Destination tag"
            @key="destinationTag"
            @value={{destinationTag}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-destination-tag={{true}}
          />
          <FilterText
            @label="RP category"
            @key="rpCategory"
            @value={{rpCategory}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @data-test-filter-rp-category={{true}}
          />
          <FilterSelect
            @label="Strategy"
            @key="strategy"
            @value={{strategy}}
            @onValueChange={{action "pushValue" target=filtersBlock}}
            @content={{selectValues.strategy}}
            @data-test-filter-strategy={{true}}
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>