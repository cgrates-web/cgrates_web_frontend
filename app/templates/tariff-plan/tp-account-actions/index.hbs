<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        TpAccountActions list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh={{route-action "refresh"}}
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Load ID"
                  @key="loadid"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Account"
                  @key="account"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Action plan tag"
                  @key="actionPlanTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Action triggers tag"
                  @key="actionTriggersTag"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Allow negative"
                  @key="allowNegative"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Disabled"
                  @key="disabled"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpAccountAction|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.loadid}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.account}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.actionPlanTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.actionTriggersTag}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.allowNegative}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{tpAccountAction.disabled}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action"
                      @model={{tpAccountAction}}
                    >
                      {{moment-format tpAccountAction.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-account-actions.tp-account-action.edit"
                      @model={{tpAccountAction}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-account-action-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpAccountAction}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-account-action-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Load ID"
            @value={{filtersBlock.activeFilters.loadid}}
            data-test-filter-loadid
          />
          <FilterText
            @label="Tenant"
            @value={{filtersBlock.activeFilters.tenant}}
            data-test-filter-tenant
          />
          <FilterText
            @label="Account"
            @value={{filtersBlock.activeFilters.account}}
            data-test-filter-account
          />
          <FilterSelectSearchToString
            @label="Action plan tag"
            @value={{filtersBlock.activeFilters.actionPlanTag}}
            @searchModel="tp-action-plan"
            @searchField="tag"
            @tpid={{this.tariffPlanId}}
            data-test-filter-action-plan-tag={{true}}
          />
          <FilterSelectSearchToString
            @label="Action triggers tag"
            @value={{filtersBlock.activeFilters.actionTriggersTag}}
            @searchModel="tp-action-trigger"
            @searchField="tag"
            @tpid={{this.tariffPlanId}}
            data-test-filter-action-triggers-tag={{true}}
          />
          <FilterSelect
            @label="Allow negative"
            @value={{filtersBlock.activeFilters.allowNegative}}
            @content={{selectValues.boolean}}
            data-test-filter-allow-negative
          />
          <FilterSelect
            @label="Disabled"
            @value={{filtersBlock.activeFilters.disabled}}
            @content={{selectValues.boolean}}
            data-test-filter-disabled
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>