<main class="page-content">
  <div class="container xl">
    <div class="actions-subtitle">
      <h2>
        Suppliers list
      </h2>
      <ul class="actions">
        <TpIndexButtons
          @model={{this.model}}
          @tariffPlanId={{this.tariffPlanId}}
          @permittedFilters={{permittedFilters}}
          @refresh="refresh"
          @controller={{this}}
        />
      </ul>
    </div>
    <TotalRecords @totalRecords={{meta.total_records}} />
    <div class="row">
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <SortHeader
                  @label="ID"
                  @key="id"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Custom ID"
                  @key="customId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Tenant"
                  @key="tenant"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                  data-test-sort-tenant={{true}}
                />
                <SortHeader
                  @label="Filter IDs"
                  @key="filterIds"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Sorting"
                  @key="sorting"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Supplier ID"
                  @key="supplierId"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Weight"
                  @key="weight"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <SortHeader
                  @label="Created at"
                  @key="createdAt"
                  @sortColumn={{sortColumn}}
                  @sortOrder={{sortOrder}}
                  @sortAction={{action "sortBy"}}
                />
                <td>
                  Actions
                </td>
              </tr>
            </thead>
            <tbody>
              {{#each model as |tpSupplier|}}
                <tr>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.id}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.customId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.tenant}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.filterIds}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.sorting}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.supplierId}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{tpSupplier.weight}}
                    </LinkTo>
                  </td>
                  <td>
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier"
                      @model={{tpSupplier}}
                    >
                      {{moment-format tpSupplier.createdAt}}
                    </LinkTo>
                  </td>
                  <td class="actions">
                    <LinkTo
                      @route="tariff-plan.tp-suppliers.tp-supplier.edit"
                      @model={{tpSupplier}}
                    >
                      <i
                        class="material-icons circle btn btn-primary"
                        data-test-tp-supplier-edit
                      >
                        edit
                      </i>
                    </LinkTo>
                    <a
                      class="ml-1"
                      role="button"
                      {{action "remove" tpSupplier}}
                    >
                      <i
                        class="material-icons circle btn btn-danger"
                        data-test-tp-supplier-remove
                      >
                        remove
                      </i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <PageNumbers
          @content={{this.pagination}}
          @action={{action "toPage"}}
          @numPagesToShow={{4}}
        />
      </div>
      <div class="col-md-3">
        <FiltersBlock
          @search={{action "search"}}
          @activeFilters={{this.filters}} as |filtersBlock|
        >
          <FilterText
            @label="Custom ID"
            @value={{filtersBlock.activeFilters.customId}}
            data-test-filter-custom-id
          />
          <FilterText
            @label="Filter IDs"
            @value={{filtersBlock.activeFilters.filterIds}}
            data-test-filter-filter-ids
          />
          <FilterText
            @label="Sorting"
            @value={{filtersBlock.activeFilters.sorting}}
            data-test-filter-sorting
          />
          <FilterText
            @label="Supplier ID"
            @value={{filtersBlock.activeFilters.supplierId}}
            data-test-filter-supplier-id
          />
          <FilterText
            @label="Weight"
            @value={{filtersBlock.activeFilters.weight}}
            data-test-filter-weight
          />
          <FilterText
            @label="Supplier weight"
            @value={{filtersBlock.activeFilters.supplierWeight}}
            data-test-filter-supplier-weight
          />
          <FilterText
            @label="Activation interval"
            @value={{filtersBlock.activeFilters.activationInterval}}
            data-test-filter-activation-interval
          />
          <FilterText
            @label="Activation interval"
            @value={{filtersBlock.activeFilters.activationInterval}}
            data-test-filter-activation-interval
          />
          <FilterText
            @label="Sorting parameters"
            @value={{filtersBlock.activeFilters.sortingParameters}}
            data-test-filter-sorting-parameters
          />
          <FilterText
            @label="Supplier filter ids"
            @value={{filtersBlock.activeFilters.supplierFilterIds}}
            data-test-filter-supplier-filter-ids
          />
          <FilterText
            @label="Supplier account ids"
            @value={{filtersBlock.activeFilters.supplierAccountIds}}
            data-test-filter-supplier-account-ids
          />
          <FilterText
            @label="Supplier rating plan ids"
            @value={{filtersBlock.activeFilters.supplierRatingplanIds}}
            data-test-filter-supplier-ratingplan-ids
          />
          <FilterText
            @label="Supplier resource ids"
            @value={{filtersBlock.activeFilters.supplierResourceIds}}
            data-test-filter-supplier-resource-ids
          />
          <FilterText
            @label="Supplier stat ids"
            @value={{filtersBlock.activeFilters.supplierStatIds}}
            data-test-filter-supplier-stat-ids
          />
        </FiltersBlock>
      </div>
    </div>
  </div>
</main>