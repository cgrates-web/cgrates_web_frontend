{{#form.element
  controlType="power-select"
  property=property
  label=label
  options=anyIfAllowed
  placeholder="Select tag..."
  showValidationOn="change"
  class=class
  data-test-tag=dataTest
as |el|}}
  {{el.control
    search=(perform searchTask)
    class=(if (eq el.validation "error") "is-invalid" (if (eq el.validation "success") "is-valid"))
  }}
{{/form.element}}
