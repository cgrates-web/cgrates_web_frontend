<@form.element
  @controlType="power-select"
  @property={{@property}}
  @label={{@label}}
  @searchEnabled={{false}}
  @options={{@content}}
  @showValidationOn="change"
  @class={{@class}}
  data-test-select={{@dataTest}} as |el|
>
  <el.control
    class={{bs-element-validation el.validation}}
    @allowClear={{@allowClear}}
    placeholder="Select item..."
  />
</@form.element>