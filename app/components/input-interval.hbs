<@form.element
  @label={{@label}}
  @placeholder={{@placeholder}}
  @property={{@property}}
  @class={{@class}}
  data-test-input-interval={{@dataTest}} as |el|
>
  <div class="input-interval">
    <el.control
      @value={{this.valueNumber}}
      @change={{action "change"}}
      @input={{action "input"}}
      @type="number"
      @step="1"
      @min="0"
    />
    <PowerSelect
      @placeholder="..."
      @searchEnabled={{false}}
      @allowClear={{false}}
      @options={{this.intervalUnits}}
      @selected={{this.currentIntervalUnit}}
      @class="ml-1"
      @onChange={{action "intervalChange"}} as |item|
    >
      {{item}}
    </PowerSelect>
  </div>
</@form.element>