<h2>
  Upload csv
</h2>
{{#if exampleUrl}}
  <a
    href={{exampleUrl}}
    target="_blank"
    rel="noopener"
    class="csv-example"
    data-test-example-url
  >
    Example
  </a>
{{/if}}
<div class="uploader">
  <FileUpload
    @name="csv"
    @accept=".csv"
    @multiple={{false}}
    @onfileadd={{action "attachFile"}}
    @data-test-file-uploader={{true}}
  >
    <a class="btn btn-outline-secondary">
      Select CSV from disk
    </a>
  </FileUpload>
  {{#if file.name}}
    <span class="file-name">
      {{file.name}}
    </span>
  {{/if}}
</div>
<button class="btn btn-primary" data-test-upload-button {{action "save"}}>
  Upload
</button>