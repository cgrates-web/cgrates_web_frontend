<@form.element
  @controlType={{this.controlType}}
  @property={{@property}}
  @label={{@label}}
  @showValidationOn="change"
  @class={{@class}}
  @change={{null}}
  @showOwnValidation={{@showOwnValidation}}
  data-test-select-search-to-str={{@dataTest}} as |el|
>
  <el.control
    placeholder={{this.placeholder}}
    @allowClear={{this.allowClear}}
    @tagName="div"
    @class={{bs-element-validation el.validation}}
    @search={{perform this.searchTask}}
    @value={{this.valueWrapper}}
    @searchEnabled={{true}}
    @onChange={{action "onChange"}} as |item|
  >
    {{item}}
  </el.control>
</@form.element>