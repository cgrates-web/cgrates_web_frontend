<div class="card filter-block">
  <div class="card-header">
    <h5>
      Filters
    </h5>
  </div>
  <div class="card-body">
    <form {{on "submit" (prevent-default this.submit)}}>
      {{yield this}}
      <div class="f-actions">
        <button type="submit" class="btn btn-primary" data-test-filter-search-btn>
          Search
        </button>
        <button
          class="btn btn-dark"
          data-test-filter-reset-btn
          {{on "click" (prevent-default this.reset)}}
        >
          Reset
        </button>
      </div>
    </form>
  </div>
</div>
