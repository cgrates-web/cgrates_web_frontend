<BsForm
  @model={{@model}}
  @onSubmit={{perform save}}
  novalidate={{true}} as |form|
>
  <div class="form-row">
    <form.element
      @label="Tag"
      @property="tag"
      @class="col-md-6"
      data-test-tag={{true}}
    />
    <InputSelect
      @property="action"
      @form={{form}}
      @label="Action"
      @content={{selectValues.action}}
      @class="col-md-6"
      @dataTest="action"
    />
    <form.element
      @label="Balance tag"
      @property="balanceTag"
      @class="col-md-6"
      data-test-balance-tag={{true}}
    />
    <InputSelect
      @property="balanceType"
      @form={{form}}
      @label="Balance type"
      @content={{selectValues.balanceType}}
      @class="col-md-6"
      @dataTest="balance-type"
    />
    <form.element
      @label="Units"
      @property="units"
      @controlType="number"
      @min="0"
      @class="col-md-6"
      data-test-units={{true}}
    />
    <form.element
      @label="Expiry time"
      @property="expiryTime"
      @class="col-md-6"
      data-test-expiry-time={{true}}
    />
    <form.element
      @label="Timing tags"
      @property="timingTags"
      @class="col-md-6"
      data-test-timing-tags={{true}}
    />
    <InputTags
      @property="destinationTags"
      @form={{form}}
      @label="Destination tags"
      @modelName="tp-destination"
      @allowAny={{true}}
      @tpid={{@model.tpid}}
      @class="col-md-6"
      @dataTest="destination"
    />
    <form.element
      @label="Rating subject"
      @property="ratingSubject"
      @class="col-md-6"
      data-test-rating-subject={{true}}
    />
    <form.element
      @label="Categories"
      @property="categories"
      @class="col-md-6"
      data-test-categories={{true}}
    />
    <form.element
      @label="Shared groups"
      @property="sharedGroups"
      @class="col-md-6"
      data-test-shared-groups={{true}}
    />
    <form.element
      @label="Balance weight"
      @property="balanceWeight"
      @controlType="number"
      @step="0.1"
      @min="0"
      @class="col-md-6"
      data-test-balance-weight={{true}}
    />
    <InputSelect
      @property="balanceBlocker"
      @form={{form}}
      @label="Balance blocker"
      @content={{selectValues.boolean}}
      @class="col-md-6"
      @dataTest="balance-blocker"
    />
    <InputSelect
      @property="balanceDisabled"
      @form={{form}}
      @label="Balance disabled"
      @content={{selectValues.boolean}}
      @class="col-md-6"
      @dataTest="balance-disabled"
    />
    <form.element
      @label="Extra parameters"
      @property="extraParameters"
      @class="col-md-6"
      data-test-extra-parameters={{true}}
    />
    <form.element
      @label="Filter"
      @property="filter"
      @class="col-md-6"
      data-test-filter={{true}}
    />
    <form.element
      @label="Weight"
      @property="weight"
      @controlType="number"
      @step="0.1"
      @min="0"
      @class="col-md-6"
      data-test-weight={{true}}
    />
  </div>
  <BsButton
    @type="primary"
    @buttonType="submit"
    disabled={{save.isRunning}}
    data-test-submit-button={{true}}
  >
    <LoadingButtonText @text="Save" @isLoading={{save.isRunning}} />
  </BsButton>
</BsForm>