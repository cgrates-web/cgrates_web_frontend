<BsForm
  @model={{@model}}
  @onSubmit={{perform @save}}
  novalidate={{true}} as |form|
>
  <div class="form-row">
    <form.element
      @label="Tenant"
      @property="tenant"
      @class="col-md-6"
      data-test-tenant={{true}}
    />
    <form.element
      @label="ID"
      @property="customId"
      @class="col-md-6"
      data-test-custom-id={{true}}
    />
    <form.element
      @label="Activation interval"
      @property="activationInterval"
      @class="col-md-6"
      data-test-activation-interval={{true}}
    />
    <form.element
      @label="Type"
      @property="cgType"
      @class="col-md-6"
      data-test-cg-type={{true}}
    />
    <form.element
      @label="Elements"
      @property="elements"
      @class="col-md-6"
      data-test-elements={{true}}
    />
    <form.element
      @label="Values"
      @property="values"
      @class="col-md-6"
      data-test-values={{true}}
    />
  </div>
  <BsButton
    @type="primary"
    @buttonType="submit"
    disabled={{@save.isRunning}}
    data-test-submit-button={{true}}
  >
    <LoadingButtonText @text="Save" @isLoading={{@save.isRunning}} />
  </BsButton>
</BsForm>